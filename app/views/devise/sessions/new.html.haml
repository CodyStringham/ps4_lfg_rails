.pure-g
  .pure-u-1.pad-10
    %h1 Log in

= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'pure-form pure-form-stacked'}) do |f|
  .pad-10
    = f.label :email
    = f.email_field :email, autofocus: true
  .pad-10
    = f.label :password
    = f.password_field :password, autocomplete: "off"
  - if devise_mapping.rememberable?
    .pad-10
      = f.label :remember_me, class: 'pure-checkbox' do
        = f.check_box :remember_me
        Remember Me

  .pad-10
    = f.submit "Log in", class: 'pure-button success'

.pure-g
  .pure-u-1.pad-10
    = render "devise/shared/links"

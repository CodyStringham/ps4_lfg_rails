= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :gamertag
    = f.text_field :gamertag
  .field
    = f.label :mic
    = f.check_box :mic
  .actions
    = f.submit 'Save'

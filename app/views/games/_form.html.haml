= form_for @game, html: {class: 'pure-form pure-form-stacked'} do |f|
  - if @game.errors.any?
    #error_explanation.pad-10
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
  .pad-10
    = f.label :name
    = f.text_field :name
  .pad-10
    = f.submit 'Save', class: 'pure-button'
